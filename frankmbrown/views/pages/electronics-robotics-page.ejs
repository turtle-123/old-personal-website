<%# 
PARTIAL ROUTE: pages/posts/article.ejs
PARTIAL DESCRIPTION: Description...
LOCAL VARIABLES:
----------------------------------
- locals.fullPageRequest
- locals.pageRequest
- locals.pageObj
- locals.auth<2?'disabled':''
- locals.path
- locals.jsNonce
%>
<%if(locals.fullPageRequest||locals.pageRequest){%>
  
    <article  style="max-width: 100%; overflow-x: hidden;">
      <h1 class="page-title"><%=locals.pageObj.title%></h1>
      <p class="mt-2">
        <%=locals.pageObj.description%>
      </p>
      <div class="mt-2 bb-main flex-row justify-between" style="padding-bottom: 4px; border-bottom-width: 3px;">
        <div class="flex-column align-center gap-2" style="width: fit-content;">
          <span class="bold">Date Created:</span>
          <time data-date-format="MM/DD/YYYY" datetime="<%=locals.pageObj.date_created%>">
            <svg focusable="false" inert viewBox="0 0 24 24" tabindex="-1" title="CalendarToday">
              <path d="M20 3h-1V1h-2v2H7V1H5v2H4c-1.1 0-2 .9-2 2v16c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 18H4V8h16v13z">
              </path>
            </svg>
            <span><%=locals.pageObj.date_created_str%></span>
          </time>
        </div>
        <div class="flex-column align-center gap-2" style="width: fit-content;">
          <span class="bold">Last Edited:</span>
          <time data-date-format="MM/DD/YYYY" datetime="<%=locals.pageObj.last_edited%>">
            <svg focusable="false" inert viewBox="0 0 24 24" tabindex="-1" title="Edit"><path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34a.9959.9959 0 0 0-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"></path></svg>
            <span><%=locals.pageObj.last_edited_str%></span>
          </time>
        </div>
      </div>
      <%-include('../partials/share-like-comment')%>
      <%-locals.pageObj.articleHTML%>
    </article>
  
    
    
    <%-include('../partials/comment')%>
  
    <%-include('../partials/pagePartial')%>
  <%}%>