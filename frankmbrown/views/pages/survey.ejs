<%# 
PARTIAL ROUTE: pages/test.ejs
PARTIAL DESCRIPTION: Description...
LOCAL VARIABLES:
----------------------------------
- locals.fullPageRequest
- locals.pageRequest
- locals.isPhone?'checked':''
%>
<%if(locals.fullPageRequest||locals.pageRequest){%>
  
    <h1 class="page-title"><%=locals.title%></h1>
    <div class="mt-2 bb-main flex-row justify-between" style="padding-bottom: 4px; border-bottom-width: 3px;">

      <div class="flex-column align-center gap-2" style="width: fit-content;">
        <span class="bold">Survey Deadline:</span>
        <time data-date-format="MM/DD/YYYY, h:m:s A" datetime="<%=locals.deadline_datetime%>">
          <svg focusable="false" inert viewBox="0 0 24 24" tabindex="-1" title="TimerOutlined"><path d="M15 1H9v2h6V1zm-4 13h2V8h-2v6zm8.03-6.61 1.42-1.42c-.43-.51-.9-.99-1.41-1.41l-1.42 1.42C16.07 4.74 14.12 4 12 4c-4.97 0-9 4.03-9 9s4.02 9 9 9 9-4.03 9-9c0-2.12-.74-4.07-1.97-5.61zM12 20c-3.87 0-7-3.13-7-7s3.13-7 7-7 7 3.13 7 7-3.13 7-7 7z"></path></svg>
          <span><%=locals.deadline_string%></span>
        </time>
      </div>

      <div class="flex-column align-center gap-2" style="width: fit-content;">
        <span class="bold">Date Created:</span>
        <time data-date-format="MM/DD/YYYY" datetime="<%=locals.date_created_datetime%>">
          <svg focusable="false" inert viewBox="0 0 24 24" tabindex="-1" title="DateRange"><path d="M9 11H7v2h2v-2zm4 0h-2v2h2v-2zm4 0h-2v2h2v-2zm2-7h-1V2h-2v2H8V2H6v2H5c-1.11 0-1.99.9-1.99 2L3 20c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 16H5V9h14v11z"></path></svg>
          <span><%=locals.date_created_string%></span>
        </time>
      </div>
    </div>

    <%-include('../partials/share-like-comment')%>

    <div class="alert warning small medium outlined icon mt-3" role="alert">
      <svg focusable="false" inert viewBox="0 0 24 24" tabindex="-1" title="Warning"><path d="M1 21h22L12 2 1 21zm12-3h-2v-2h2v2zm0-4h-2v-4h2v4z"></path></svg>
      <p class="alert">
        You will only be able to view annotations after the survey deadline. 
      </p>
      <button aria-label="Close Alert" class="icon medium close-alert" type="button">
        <svg focusable="false" inert viewBox="0 0 24 24" tabindex="-1" title="Close"><path d="M19 6.41 17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"></path></svg>
      </button>
    </div>

    <div class="lexical-wrapper example-render hz-scroll mt-2" data-rich-text-editor data-type="full" data-editable="false" id="<%=locals.description_id%>" <%-!!!locals.results?'data-annotate-only':''%>><%-locals.description_html%></div>    

    <section id="questions" class="mt-4">
        <h2 class="bold bb-thick h2">
          <a href="#questions" class="same-page bold">
            Questions
          </a>
        </h2>
        <%-locals.survey_body%>
    </section>
  

    <div id="submit-form" class="flex-row justify-end mt-2">
      <button type="submit" id="submit-survey-response-button" aria-label="Submit" class="success filled icon-text medium">
          <svg focusable="false" inert viewBox="0 0 24 24" tabindex="-1" title="Send"><path d="M2.01 21 23 12 2.01 3 2 10l15 2-15 2z"></path></svg>
          SUBMIT
      </button>
    </div>

    <%-include('../partials/pagePartial')%>
  <%}%>
  