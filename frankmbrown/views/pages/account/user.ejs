<%# 
PAGE ROUTE: /user/:id/:username
PAGE DESCRIPTION: /
PAGE KEYOWRDS: [/]
PAGE IMAGE: 
PAGE VARIABLES:
-------------------------
- locals.hello (number): 
- locals.world (string|undefined): 
%>
<%if(locals.fullPageRequest||locals.pageRequest){%>
  <div class="flex-row justify-start align-center gap-3" style="margin-top: 3rem;">
    <img src="<%-locals.pageObj.pp%>" alt="<%=locals.pageObj.username%>" style="width:75px;height: 75px; margin: 0px; display: inline; border-radius: 50%;" width="75" height="75" />
    <h1 class="h1 bold">
        <%=locals.pageObj.username%>
    </h1>
  </div>

  <div class="mt-2 lexical-wrapper" data-editable="false" data-rich-text-editor data-type="comment">
    <%-locals.pageObj.html%>
  </div>

  <div class="flex-row justify-end align-cente0r gap-3" style="padding-bottom: 4px; border-bottom: 2px solid var(--divider);">
    <span class="h6 bold">
        Date Created:
    </span>
    <time data-date-format="dddd MMMM D, YYYY" datetime="<%=locals.pageObj.datetime%>">
      <svg focusable="false" inert viewBox="0 0 24 24" tabindex="-1" title="CalendarToday">
        <path d="M20 3h-1V1h-2v2H7V1H5v2H4c-1.1 0-2 .9-2 2v16c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 18H4V8h16v13z">
        </path>
      </svg>
      <span><%=locals.pageObj.date_created_text%></span>
    </time>

  </div>

  <section id="user-activity" class="mt-4" data-no-search>
      <h2 class="bold bb-thick h2">
        <a href="#user-activity" class="same-page bold">
            User Activity
        </a>
      </h2>
      <div class="tabs mt-2">
        <ul class="tabs" role="tablist">
          <li role="presentation">
            <button id="comements-user" class="tab-button secondary" style="flex-grow: 1; flex-shrink: 0;" role="tab" type="button" aria-selected="true" data-tab="0" tabindex="-1">Comments</button>
          </li>
          <li role="presentation">
            <button id="annotations-user" class="tab-button t-secondary" style="flex-grow: 1; flex-shrink: 0;" role="tab" type="button" aria-selected="false" data-tab="1" tabindex="-1">Annotations</button>
          </li>
          <li role="presentation">
            <button id="likes-user" class="tab-button t-secondary" style="flex-grow: 1; flex-shrink: 0;" role="tab" type="button" aria-selected="false" data-tab="2" tabindex="-1">Likes</button>
          </li>
          <li role="presentation">
            <button id="upvotes-user" class="tab-button t-secondary" style="flex-grow: 1; flex-shrink: 0;" role="tab" type="button" aria-selected="false" data-tab="3" tabindex="-1">Upvotes</button>
          </li>
          <li role="presentation">
            <button id="downvotes-user" class="tab-button t-secondary" style="flex-grow: 1; flex-shrink: 0;" role="tab" type="button" aria-selected="false" data-tab="4" tabindex="-1">Downvotes</button>
          </li>
        </ul>
      </div>
      <div class="tab-panels">
        <div aria-labelledby="comements-user" role="tabpanel" tabindex="0">
            <%-locals.pageObj.comments%>
        </div>
        <div aria-labelledby="annotations-user" role="tabpanel" tabindex="0" hidden>
            <%-locals.pageObj.annotations%>
        </div>
        <div aria-labelledby="likes-user" role="tabpanel" tabindex="0" hidden>
            <%-locals.pageObj.likes%>
        </div>
        <div aria-labelledby="upvotes-user" role="tabpanel" tabindex="0" hidden>
            <%-locals.pageObj.upvotes%>
        </div>
        <div aria-labelledby="downvotes-user" role="tabpanel" tabindex="0" hidden>
            <%-locals.pageObj.downvotes%>
        </div>
      </div>
  </section>

  
  <div id="liked-tool" role="tooltip" class="tooltip body2" data-placement="bottom">
    Date Liked
  </div>

  <%-include('../../partials/pagePartial')%>
<%}%>