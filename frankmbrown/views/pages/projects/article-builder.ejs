<%# 
PARTIAL ROUTE: pages/projects/article-builder.ejs
PARTIAL DESCRIPTION: Description...
LOCAL VARIABLES:
----------------------------------
- locals.fullPageRequest
- locals.pageRequest
- locals.articleBuilder1
%>
<%if(locals.fullPageRequest||locals.pageRequest){%>
  
  
  <form id="article-builder-form" hx-post="/projects/article-builder">
    <%-locals.articleBuilder1%>
  </form>
  
  <div id="preview-article-different-sizes" hidden>
    <div class="w-100 flex-row justify-start align-center mt-2">
      <button type="button" class="icon-text medium filled info" id="show-article-editor">
        <svg focusable="false" inert viewBox="0 0 24 24" tabindex="-1" title="RemoveRedEye"><path d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"></path></svg>
        SHOW ARTICLE EDITOR
      </button>
    </div>
    <div class="tabs mt-2">
      <ul class="tabs" role="tablist">
        <li role="presentation">
          <button id="mobile-tab-button" class="tab-button secondary" role="tab" type="button" aria-selected="true" data-tab="0" tabindex="-1">
            Mobile
          </button>
        </li>
        <li role="presentation">
          <button id="tablet-tab-button" class="tab-button t-secondary" role="tab" type="button" aria-selected="false" data-tab="1" tabindex="-1">
            Tablet
          </button>
        </li>
        <li role="presentation">
          <button id="desktop-tab-button" class="tab-button t-secondary" role="tab" type="button" aria-selected="false" data-tab="2" tabindex="-1">
            Desktop
          </button>
        </li>
      </ul>
    </div>
    <div class="tab-panels hz-scroll" style="background-color: var(--secondary-background);">
      <div aria-labelledby="mobile-tab-button" role="tabpanel" tabindex="0">
        <div style="padding: 8px 0px;" class="hz-scroll">
          <div class="preview-editor-mobile hz-scroll">
            <div data-rich-text-editor data-type="full" id="mobile-article-builder-example" class="lexical-wrapper example-render mt-3" style="padding: 0px;">
            </div>
          </div>
        </div>
      </div>
      <div aria-labelledby="tablet-tab-button" role="tabpanel" tabindex="0" hidden> 
        <div style="padding: 8px 0px;" class="hz-scroll">
          <div class="preview-editor-tablet hz-scroll">
            <div data-rich-text-editor data-type="full" id="tablet-article-builder-example" class="lexical-wrapper example-render mt-3" style="padding: 0px;">
            </div>
          </div>
        </div>
      </div>
      <div aria-labelledby="desktop-tab-button" role="tabpanel" tabindex="0" hidden> 
        <div style="padding: 8px 0px;" class="hz-scroll">
          <div class="preview-editor-desktop hz-scroll">
            <div data-rich-text-editor data-type="full" id="desktop-article-builder-example" class="lexical-wrapper example-render mt-3" style="padding: 0px;">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  

  <div id="article-builder-success" class="snackbar success" aria-hidden="true" role="alert" data-snacktime="4000">
    <svg focusable="false" inert viewBox="0 0 24 24" tabindex="-1" title="Article"><path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z"></path></svg>
    <p class="p-sm">
      Lexical Editor state has been copied to clipboard!
    </p>
    <button class="icon medium" type="button" data-close-snackbar aria-label="Close Snackbar">
      <svg focusable="false" inert viewBox="0 0 24 24" tabindex="-1" title="CloseSharp"><path d="M19 6.41 17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12 19 6.41z"></path></svg>
    </button>
  </div>
  <div id="article-builder-error" class="snackbar error" aria-hidden="true" role="alert" data-snacktime="4000">
    <svg focusable="false" inert viewBox="0 0 24 24" tabindex="-1" title="Error"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z"></path></svg>
    <p class="p-sm">
      Something went wrong generating the lexical editor state.
    </p>
    <button class="icon medium" type="button" data-close-snackbar aria-label="Close Snackbar">
      <svg focusable="false" inert viewBox="0 0 24 24" tabindex="-1" title="CloseSharp"><path d="M19 6.41 17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12 19 6.41z"></path></svg>
    </button>
  </div>

  <%-include('../../partials/pagePartial')%>
<%}%>

