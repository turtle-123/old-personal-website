<%# 
PARTIAL ROUTE: partials/circleInputExampleResponse.ejs
PARTIAL DESCRIPTION: Description...
LOCAL VARIABLES:
----------------------------------
- locals.error (boolean): Is there an error
- locals.circleInputs
- locals.circleInputs[i]
%>
<%if(!!!locals.error){%>
  <%if(!!!locals.circleInputs.length){%>
    <p class="h6 text-align-center t-warning fw-regular">
      Please input a circle on the Map.
    </p>
  <%}else{%>
    <p class="h6 mt-1 fw-regular">
      Circle Input Form:
    </p>
    <table cellspacing="0">
      <thead>
        <tr>
          <th scope="col" style="max-width: 50px;">
            Attributes:
          </th>
          <%for (let i=0; i < locals.circleInputs.length; i++){%>
            <th scope="col">
              Circle <%=i+1%>
            </th>
          <%}%>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th scope="row" style="max-width: 50px;">Input Name:</th>
          <%for (let i=0; i < locals.circleInputs.length; i++){%>
            <td class="caption"><%=locals.circleInputs[i].name%></td>
          <%}%>
        </tr>
        <tr>
          <th scope="row" style="max-width: 50px;">Input String:</th>
          <%for (let i=0; i < locals.circleInputs.length; i++){%>
            <td class="caption"><%=locals.circleInputs[i].formString%></td>
          <%}%>
        </tr>
        <tr>
          <th scope="row" style="max-width: 50px;">Radius (m):</th>
          <%for (let i=0; i < locals.circleInputs.length; i++){%>
            <td><%=locals.circleInputs[i].r%></td>
          <%}%>
        </tr>
        <tr>
          <th scope="row" style="max-width: 50px;">Center:</th>
          <%for (let i=0; i < locals.circleInputs.length; i++){%>
            <td><%=locals.circleInputs[i].centerStr%></td>
          <%}%>
        </tr>
      </tbody>
      <tfoot>
        <tr>
          <th style="text-align: left;" scope="row" colspan="<%=1+Number(Object.keys(locals.circleInputs).length)%>">
            <span class="body2">
              This output shows the <span class="t-info bold">Input Name</span> of the circle input(s), which is the random 
              name given to the input when the circle is drawn on the map. <strong>Note: The circle input(s) will always start with "circle_"</strong>, and it shows
              the <span class="t-info bold">Input String</span>, which is how the server receives the circle input(s).
            </span>
          </th>
        </tr>
      </tfoot>
    </table>
  <%}%>
  
<%}else{%>
<div role="alert" class="alert error icon medium">
  <svg focusable="false" inert viewBox="0 0 24 24" tabindex="-1" title="Report"><path d="M15.73 3H8.27L3 8.27v7.46L8.27 21h7.46L21 15.73V8.27L15.73 3zM12 17.3c-.72 0-1.3-.58-1.3-1.3 0-.72.58-1.3 1.3-1.3.72 0 1.3.58 1.3 1.3 0 .72-.58 1.3-1.3 1.3zm1-4.3h-2V7h2v6z"></path></svg>
  <p class="alert body2">
    Something went wrong.
  </p>
</div>
<%}%>
