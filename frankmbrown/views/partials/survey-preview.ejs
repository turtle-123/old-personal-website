<%# 
locals.id
locals.title 
locals.image 
locals.description_string
locals.date_created_datetime
locals.date_created_string 
locals.question_count
%>
<a class="preview-article" hx-get="/surveys/<%=locals.id%>/<%=locals.title%>" href="/surveys/<%=locals.id%>/<%=locals.title%>" hx-push-url="true" hx-target="#PAGE" hx-indicator="#page-transition-progress" >
    <div style="background-color: black; flex-shrink: 0;" class="flex-row justify-center align-center">
        <img src="<%=locals.image%>" alt="<%=locals.title%>" style="width: 150px;height: 75px; margin: 0px; object-fit: contain; background-color: black; align-self: center;" width="150" height="75">
    </div>
    <div class="p-md flex-column justify-start align-start grow-1" style="min-width: 0px;">
        <p class="h5 bold w-100">
            <%=locals.title%>
        </p>
        <p class="body2 mt-1 w-100">
            <%=locals.description_string%>
        </p>
        <div class="flex-row w-100 align-center justify-between mt-1">
            <time data-popover="" data-pelem="#deadline-tool" data-mouse="" data-date-format="MM/DD/YYYY, h:m:s A" class="small" datetime="<%=locals.deadline_datetime%>">
              <svg focusable="false" inert viewBox="0 0 24 24" tabindex="-1" title="CalendarToday">
                <path d="M20 3h-1V1h-2v2H7V1H5v2H4c-1.1 0-2 .9-2 2v16c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 18H4V8h16v13z">
                </path>
              </svg>
              <span><%=deadline_string%></span>
            </time>
            <time data-popover="" data-pelem="#date-created-tool" data-mouse="" data-date-format="MM/DD/YYYY" class="small" datetime="<%=locals.date_created_datetime%>">
                <svg focusable="false" inert="" viewBox="0 0 24 24" tabindex="-1" title="CalendarToday">
                    <path d="M20 3h-1V1h-2v2H7V1H5v2H4c-1.1 0-2 .9-2 2v16c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 18H4V8h16v13z">
                    </path>
                </svg>
                <span><%=locals.date_created_string%></span>
              </time>
        </div>
        <div class="flex-row w-100 align-center justify-start mt-1 gap-3">
            <span data-popover="" data-pelem="#question-count-tool" data-mouse=""  class="flex-row align-center justify-start gap-1">
                <svg class="t-normal" style="width:1rem;height:1rem;" viewBox="0 0 320 512" title="question" focusable="false" inert="" tabindex="-1"><path d="M80 160c0-35.3 28.7-64 64-64h32c35.3 0 64 28.7 64 64v3.6c0 21.8-11.1 42.1-29.4 53.8l-42.2 27.1c-25.2 16.2-40.4 44.1-40.4 74V320c0 17.7 14.3 32 32 32s32-14.3 32-32v-1.4c0-8.2 4.2-15.8 11-20.2l42.2-27.1c36.6-23.6 58.8-64.1 58.8-107.7V160c0-70.7-57.3-128-128-128H144C73.3 32 16 89.3 16 160c0 17.7 14.3 32 32 32s32-14.3 32-32zm80 320a40 40 0 1 0 0-80 40 40 0 1 0 0 80z"></path></svg>
                <span>
                <%=locals.question_count%>
                </span>
            </span>
            <span data-popover="" data-pelem="#likes-tool" data-mouse="" class="flex-row gap-1 align-center"><svg class="caption t-normal" viewBox="0 0 512 512" title="heart" focusable="false" inert="" tabindex="-1"><path d="M225.8 468.2l-2.5-2.3L48.1 303.2C17.4 274.7 0 234.7 0 192.8v-3.3c0-70.4 50-130.8 119.2-144C158.6 37.9 198.9 47 231 69.6c9 6.4 17.4 13.8 25 22.3c4.2-4.8 8.7-9.2 13.5-13.3c3.7-3.2 7.5-6.2 11.5-9c0 0 0 0 0 0C313.1 47 353.4 37.9 392.8 45.4C462 58.6 512 119.1 512 189.5v3.3c0 41.9-17.4 81.9-48.1 110.4L288.7 465.9l-2.5 2.3c-8.2 7.6-19 11.9-30.2 11.9s-22-4.2-30.2-11.9zM239.1 145c-.4-.3-.7-.7-1-1.1l-17.8-20c0 0-.1-.1-.1-.1c0 0 0 0 0 0c-23.1-25.9-58-37.7-92-31.2C81.6 101.5 48 142.1 48 189.5v3.3c0 28.5 11.9 55.8 32.8 75.2L256 430.7 431.2 268c20.9-19.4 32.8-46.7 32.8-75.2v-3.3c0-47.3-33.6-88-80.1-96.9c-34-6.5-69 5.4-92 31.2c0 0 0 0-.1 .1s0 0-.1 .1l-17.8 20c-.3 .4-.7 .7-1 1.1c-4.5 4.5-10.6 7-16.9 7s-12.4-2.5-16.9-7z"></path></svg> <span class="body2"><%=locals.like_count%></span></span>
            <%if(locals.results){%>
                <span data-popover="" data-pelem="#comments-tool" data-mouse="" class="flex-row gap-1 align-center"> <svg class="caption t-normal" viewBox="0 0 512 512" title="comment" focusable="false" inert="" tabindex="-1"><path d="M123.6 391.3c12.9-9.4 29.6-11.8 44.6-6.4c26.5 9.6 56.2 15.1 87.8 15.1c124.7 0 208-80.5 208-160s-83.3-160-208-160S48 160.5 48 240c0 32 12.4 62.8 35.7 89.2c8.6 9.7 12.8 22.5 11.8 35.5c-1.4 18.1-5.7 34.7-11.3 49.4c17-7.9 31.1-16.7 39.4-22.7zM21.2 431.9c1.8-2.7 3.5-5.4 5.1-8.1c10-16.6 19.5-38.4 21.4-62.9C17.7 326.8 0 285.1 0 240C0 125.1 114.6 32 256 32s256 93.1 256 208s-114.6 208-256 208c-37.1 0-72.3-6.4-104.1-17.9c-11.9 8.7-31.3 20.6-54.3 30.6c-15.1 6.6-32.3 12.6-50.1 16.1c-.8 .2-1.6 .3-2.4 .5c-4.4 .8-8.7 1.5-13.2 1.9c-.2 0-.5 .1-.7 .1c-5.1 .5-10.2 .8-15.3 .8c-6.5 0-12.3-3.9-14.8-9.9c-2.5-6-1.1-12.8 3.4-17.4c4.1-4.2 7.8-8.7 11.3-13.5c1.7-2.3 3.3-4.6 4.8-6.9c.1-.2 .2-.3 .3-.5z"></path></svg> <span class="body2"><%=locals.comment_count%></span></span>
            <%}%>
            <span data-popover="" data-pelem="#annotations-tool" data-mouse="" class="flex-row gap-1 align-center"><svg class="caption t-normal" focusable="false" inert="" viewBox="0 0 24 24" tabindex="-1" title="EditNote"><path d="M3 10h11v2H3v-2zm0-2h11V6H3v2zm0 8h7v-2H3v2zm15.01-3.13.71-.71c.39-.39 1.02-.39 1.41 0l.71.71c.39.39.39 1.02 0 1.41l-.71.71-2.12-2.12zm-.71.71-5.3 5.3V21h2.12l5.3-5.3-2.12-2.12z"></path></svg>  <span class="body2"><%=locals.annotation_count%></span></span>
            <span data-popover="" data-pelem="#views-tool" data-mouse="" class="flex-row gap-1 align-center"> <svg class="caption t-normal" focusable="false" inert="" viewBox="0 0 24 24" tabindex="-1" title="RemoveRedEye"><path d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"></path></svg> <span class="body2"><%=locals.view_count%></span></span>
            <span data-popover="" data-pelem="#responses-tool" data-mouse="" class="flex-row gap-1 align-center"> <svg class="caption t-normal" focusable="false" inert viewBox="0 0 24 24" tabindex="-1" title="Numbers"><path d="m20.5 10 .5-2h-4l1-4h-2l-1 4h-4l1-4h-2L9 8H5l-.5 2h4l-1 4h-4L3 16h4l-1 4h2l1-4h4l-1 4h2l1-4h4l.5-2h-4l1-4h4zm-7 4h-4l1-4h4l-1 4z"></path></svg> <span class="body2"><%=locals.response_count%></span></span>
        </div>
    </div>
</a>

